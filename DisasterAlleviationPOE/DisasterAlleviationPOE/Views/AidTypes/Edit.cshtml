@model DisasterAlleviationPOE.Models.RequiredAidType

@{
    ViewData["Title"] = "Update Aid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update Required Aid</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RequiredAidTypeID" />
            <div class="form-group">
                <label asp-for="RequiredAidName" class="control-label"></label>
                <input asp-for="RequiredAidName" class="form-control" />
                <span asp-validation-for="RequiredAidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update Aid" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color:rebeccapurple !important;">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
